<main class="lista-vacantes">
    <h2>Lista de vacantes</h2>
    {{#if vacantes.length}}
     {{#each vacantes }}
    <div class="vacante">
        <div class="caja">
            <h3>{{empresa}}</h3>
            <p class="puesto">{{titulo}}</p>
            <p class="candidatos">{{candidatos.length}} candidatos(s)</p>
        </div>
        <div class="caja">
            <p class="etiqueta">Ubicaci√≥n</p>
            <p class="nombre">{{ubicacion}}</p>
        </div>
        <div class="caja">
            <p class="etiqueta">Contrato</p>
            <p class="nombre contrato">{{contrato}}</p>
        </div>
        <div class="caja cetrar-vertical">
            <a href="/vacantes/{{url}}" class="btn btn-verde">Mas info</a>
        </div>
    </div>
    {{/each}}
    {{else}}
    <p>No hay vancantes existentes</p>
    {{/if}}
</main>