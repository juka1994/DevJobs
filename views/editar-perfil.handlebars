<div class="contenedor">
    <form action="/editar-perfil" method="POST" class="default-form" enctype="multipart/form-data">
        <div class="campo">
            <label for="nombre">Nombre:</label>
            <input value="{{usuario.nombre}}"type="text" name="nombre" placeholder="Nombre">
        </div>
        <div class="campo">
            <label for="email">Email:</label>
            <input value="{{usuario.email}}"type="text" name="email" placeholder="Email">
        </div>
        <div class="campo">
            <label for="password">Password:</label>
            <input type="password" name="password" placeholder="Password">
        </div>
        <div class="campo">
            <label for="imagen">Imagen</label>
            <input type="file" name="imagen" placeholder="Tu imagen de perfil">
            {{#if usuario.imagen}}
            <img src="/uploads/perfiles/{{usuario.imagen}}" class= "admin-perfil"alt="perfil">
            {{/if}}
        </div>
        <input type="submit" value="Guardar cambios" class="btn btn-azul">
    </form>
</div>