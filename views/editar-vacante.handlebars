<main class="contenedor">
    <form action="/vacantes/editar/{{vacante.url}}" method="POST" class="default-form">
        <h3>Informaci√≥n general</h3>
        
        <div class="campo">
            <label for="titulo">Titulo</label>
            <input value="{{vacante.titulo}}" type="text" name="titulo" placeholder="Ej." required>
        </div>
         <div class="campo">
            <label for="empresa">Empresa</label>
            <input value="{{vacante.empresa}}" type="text" name="empresa" placeholder="Empresa" required>
        </div>
         <div class="campo">
            <label for="ubicacion">Ubiacion</label>
            <input value="{{vacante.ubicacion}}" type="text" name="ubicacion" placeholder="Remoto" required>
        </div>
        <div class="campo">
            <label for="salario">Salario (USD)</label>
            <input value="{{vacante.salario}}" type="text" name="salario" placeholder="Ej. $500" required>
        </div>
        <div class="campo">
            <label for="contrato">Contrato</label>
            <select  name="contrato">
                {{#tipoContrato vacante.contrato}}
                <option value=""disabled selected>-- Selecciona --</option>
                <option value="Freelance">Freelance</option>
                <option value="Tiempo conpleto">Tiempo completo</option>
                <option value="Medio tiempo">Medio tiempo</option>
                <option value="Por proyecto">Por proyecto</option>
                {{/tipoContrato}}
            </select>
        </div>
        <h3>Descripcion del puesto</h3>
        <div class="campo descripcion">
            <label for="descripcion">Descripcion</label>
            <input type="hidden" id="x" name="descripcion" value="{{{vacante.descripcion}}}">
            <trix-editor input="x"></trix-editor>
        </div>
        <h3>Conocimientos</h3>
        <ul class="lista-conocimientos">
            {{#seleccionarSkills vacante.skills}}
            {{/seleccionarSkills}}
        </ul>
        <div class="campo centrar-horizontal">
            <input type="hidden" name="skills" id="skills">
            <input type="submit" value="Guardar cambios" class="btn btn-azul">
        </div>
    </form>

</main>